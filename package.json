{
  "name": "@crystal-ball/prettier-base",
  "version": "2.1.0",
  "description": "ðŸ”® Projects - Prettier configs",
  "main": "index.js",
  "keywords": [
    "Prettier",
    "Crystal Ball"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com> (https://danhedgecock.com)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/prettier-base.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "ISC",
  "scripts": {
    "test": "npm run test:format",
    "test:format": "prettier --check index.js",
    "format": "prettier --write '*.{js,json,md}' '**/*.{js,json,md,mdx,scss}' !CHANGELOG.md"
  },
  "dependencies": {
    "prettier": "2.0.5"
  },
  "devDependencies": {
    "@crystal-ball/commitizen-base": "2.4.0",
    "@crystal-ball/semantic-release-base": "2.16.0",
    "husky": "4.2.5"
  },
  "config": {
    "commitizen": {
      "path": "@crystal-ball/commitizen-base"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "prettier": "./index.js",
  "release": {
    "extends": [
      "@crystal-ball/semantic-release-base"
    ]
  }
}
